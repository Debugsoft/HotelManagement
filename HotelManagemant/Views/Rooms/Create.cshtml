@model HotelManagemant.ViewModels.roomViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



@using (Html.BeginForm("Create", "Rooms", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-vertical">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-3">
        <div class="form-group">

            @Html.LabelFor(model => model.RoomNo)

            @Html.EditorFor(model => model.RoomNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RoomNo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            ,

            @Html.LabelFor(model => model.Capacity)

            @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "form-control", @minimumvalue = 1 } })
            @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">

            @Html.LabelFor(model => model.NoofBeds)

            @Html.EditorFor(model => model.NoofBeds, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoofBeds, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">

            @Html.LabelFor(model => model.Roomtype)

            @Html.EditorFor(model => model.Roomtype, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Roomtype, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">

            @Html.LabelFor(model => model.Price)

            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">

            @Html.LabelFor(model => model.Description)

            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
           <label>Image</label>
            <input type="file" id="Image" name="Image" class="form-control"  accept=".jpg , .png"/>
            @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(model => model.facilitiesId)


            <div class="checkbox">
                @foreach (var item in Model.Facilities)
                {
                    if (item.Type == "Room")
                    {
                <label>  <input type="checkbox" name="facilitiesId" value="@item.Id" />@item.Name</label>
                      
                    }
                }

            </div>
            @Html.ValidationMessageFor(model => model.facilitiesId, "", new { @class = "text-danger" })
        </div>
    </div>
    &nbsp;
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(model => model.Status)
            <div class="Radio">
                <label>
                    @Html.RadioButton("Status", "Useable",false)<label>Useable</label>
                    @Html.RadioButton("Status", "UnUseable")<label>Unuseable</label>
                </label>
            </div>
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

        </div>
    </div>


    <div class="col-md-12">
        <input type="submit" value="Create" class="btn btn-default" /> @Html.ActionLink("Back to List", "Index", "Rooms")

    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
