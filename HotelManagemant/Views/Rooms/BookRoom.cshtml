@model IEnumerable<HotelManagemant.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoofBeds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roomtype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
       
       
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoofBeds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roomtype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        
       
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("book", "book", new { roomId = item.id,roomNo=item.RoomNo }) |
            @Html.ActionLink("CancilRoom", "CancilRoom", new { id = item.id }) 

        </td>
    </tr>
}

</table>
